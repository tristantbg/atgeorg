webfont('F', 'F', false, 'normal')
webfont('FI', 'FI', false, 'normal')
webfont('AG', 'AG', false, 'normal')
webfont('AGI', 'AGI', false, 'normal')

body,html
	width 100%
	-webkit-text-size-adjust 100%
	background $primary

html
	font-size 62.5%

body
	font-family 'AG', Helvetica Neue, Arial, sans-serif
	font-size ($heading/2)
	line-height 1
	color $secondary
	text-rendering optimizeLegibility
	font-smoothing()

p
	margin-bottom 1em
	line-height 1

p:last-child
	margin-bottom 0

em
	font-family 'AGI'

h1, .title, .section-title
	font-family 'F'
	font-size $heading

h2, .lead, strong
	font-family 'F'
	em
		font-family 'FI'

.caption, small, .people-text
	font-size 1.7rem

.people-text
	strong
		font-size ($heading/2)

::selection
	background alpha($secondary, 0.2)
	
::-moz-selection
	background alpha($secondary, 0.2)

*
	//hideselect()
	box-sizing(border-box)

video::-webkit-media-controls
	display none

video::-webkit-media-controls-play-button {}

video::-webkit-media-controls-volume-slider {}

video::-webkit-media-controls-mute-button {}

video::-webkit-media-controls-timeline {}

video::-webkit-media-controls-current-time-display {}

a, a:hover, a:visited, a:focus
	color inherit
	text-decoration none
	cursor pointer

.lazy, .plyr
	transition opacity 300ms ease
	opacity 0

.lazy.lazyloaded, .lazy.flickity-lazyloaded, .plyr.plyr--ready
	opacity 1

body.is-loading
	#page-content
		opacity 0