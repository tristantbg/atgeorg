section
	overflow hidden
	min-height 100vh
	.iScrollVerticalScrollbar
		width 7px !important
		.iScrollIndicator
			top 0 !important
			bottom 0 !important
			background $secondary !important
			border none !important
			border-radius 0 !important
	.content
		padding $padding $padding $heading 0
		width 50%
		margin 0 0 0 50%
		+below($md)
			span(1)
			width 100% !important
			padding-left $padding
			padding-top 8rem !important
			margin auto !important
		&.contain-width
			max-width 1200px
	.fp-scroller
		.content
			padding-bottom 70vh
	&[data-type="landing"]
		cursor pointer
		img
			position absolute
			width 20%
			top 15vh
			left 30%
			+below($md)
				width 40vmin
				left $padding
	&[data-type="news"]
		#feed
			span(1)
		.news-item
			span(1)
			position relative
			margin-bottom 2em
			& > a
				// display block
				// position absolute
				// width 100%
				// height 100%
				// top 0
				// left 0
		img
			width auto
			max-width 100%
		h4
			margin-bottom 1em
			&:hover::before
				+above($md + 1)
					content '\2192\00a0'
		.message
			margin-bottom 1.3rem
		#load-more-news
			cursor pointer
	&[data-type="informations"]
		.content
			padding-top ($padding/2)
		.informations-section:not(:last-child)
			margin-bottom $heading
		.paragraph
			flowing-paragraph(1em)
			&:not(:last-child)
				margin-bottom 1em
	&[data-type="team"]
		[event-target="people"]
		.people
			span(1)
			position relative
			img.avatar
				transition opacity 150ms ease
				position absolute
				width 20%
				max-width 100%
				top ($padding / -2)
				left 'calc(-20% - %s)' % $padding
				border-radius 50%
				opacity 0
				+below($md)
					right 0
					left initial
			h2:first-child
				cursor pointer
			&.open
				.avatar
					transition-delay 500ms
					opacity 1
			.people-text
				display none
				flowing-paragraph(2em)
				margin-bottom 1em
				+below($md)
					padding-right 21%
				&::before
					content ''
					display block
					width .15em
					height .15em
	&[data-type="projects"]
		.content
			padding-right 0
			width 55%
		.projects-filters
			margin-bottom 1em
			h2
				cursor pointer
				&.active::before
					content '\2022\00a0'
		.projects-list
			span(1)
		.project-item
			span(1/4)
			width 22.4666666%
			margin-right $padding
			margin-bottom $padding
			+below($md)
				width 45.83333333%
			img
				display block
			.project-infos
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				overflow hidden
				opacity 0
				background $primary
				span, p
					display inline
			a
				transition opacity 200ms
				display block
				position relative
				width 100%
				height 100%
				&:hover
					.project-infos
						+above($md + 1)
							opacity 1
			&.disabled
				background $secondary
				a
					cursor default
					opacity 0